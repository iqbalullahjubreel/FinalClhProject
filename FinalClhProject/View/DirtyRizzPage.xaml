<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:FinalClhProject.ViewModel"
    x:Class="FinalClhProject.Views.DirtyRizzPage"
    BackgroundColor="{DynamicResource PageBackgroundBrush}">

    

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
                <Button Text="Home"
                        BackgroundColor="Blue"
                        FontAttributes="Bold"
                        Padding="10"
                        Clicked="OnGoToHomeAsync"
                        HorizontalOptions="End" />

                <Button Text="Logout"
                        BackgroundColor="Red"
                        FontAttributes="Bold"
                        Padding="10"
                        Clicked="OnLogoutAsync"
                        HorizontalOptions="End" />
                <Button Text="Settings"
                        BackgroundColor="Blue"
                        FontAttributes="Bold"
                        Padding="10"
                        Clicked="OnGoToSettingsAsync"
                        HorizontalOptions="End" />
            </HorizontalStackLayout>
            <Frame
                BorderColor="Black"
                CornerRadius="15"
                BackgroundColor="#fff0f5"
                WidthRequest="350"
                HeightRequest="350"
                HorizontalOptions="Center"
                VerticalOptions="Start"
                Padding="15"
                HasShadow="True">

                <ScrollView>
                    <CollectionView ItemsSource="{Binding RizzLines}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="#dc3977"
                                       CornerRadius="12"
                                       Padding="10"
                                       Margin="5">
                                    <Label Text="{Binding .}" TextColor="White" FontSize="14"/>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </ScrollView>
            </Frame>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">

                <Button Text="ðŸ”¥ Normal Rizz Lines"
                        Command="{Binding GenerateNormalCommand}"
                        BackgroundColor="Black"
                        TextColor="White"
                        CornerRadius="25"
                        Padding="15,10"
                        WidthRequest="160" />

                <Button Text="ðŸ”¥ Flirty Rizz-Lines"
                        Command="{Binding GenerateDirtyCommand}"
                        BackgroundColor="Black"
                        TextColor="White"
                        CornerRadius="25"
                        Padding="15,10"
                        WidthRequest="160" />

            </HorizontalStackLayout>


            <Label Text="{Binding ChatCredit, StringFormat='Chat Credit: {0}'}"
                   FontAttributes="Italic"
                   HorizontalOptions="Center"
                   TextColor="Gray" />

            <Label Text="Jobbs AI Dating Tool"
                   FontSize="20"
                   HorizontalOptions="Center"
                   TextColor="Gray"
                   FontAttributes="Bold" />

            <Grid ColumnDefinitions="1*, 2*" ColumnSpacing="10">
                <Image Source="bing_shot6.png"
                        HeightRequest="300"
                        WidthRequest="1000"
                        Aspect="AspectFit"
                        Grid.Column="0" />
                <Label Text="ðŸ’Œ What is Jobbs Lines AI Generator?&#10;&#10;Jobbs Lines AI Generator is an innovative tool that leverages artificial intelligence to create engaging and personalized RIZZ Lines, helping users enhance their dating interactions. Whether you're looking for the perfect pickup line or a conversation starter, this generator provides tailored suggestions to boost your confidence and success in dating."
                        Grid.Column="1"
                       Style="{StaticResource BodyLabelStyle}"
                        HorizontalOptions="Center"
                        TextColor="{DynamicResource LabelTextColor}"
                        LineBreakMode="WordWrap"
                        FontSize="14"/>

            </Grid>

            <VerticalStackLayout Spacing="15">
                <Label Text="Enhance Your Dating Experience with RIZZ Line"
                       Style="{StaticResource SectionHeaderStyle}"/>

                <Label Text="In the dynamic world of dating, standing out can be challenging. That's where RIZZ Line comes in, an innovative feature of the JOBBS AI platform designed to empower your dating game. By leveraging cutting-edge AI technology, RIZZ Line generates captivating and personalized pickup lines that resonate with your unique style and the preferences of your potential matches."
